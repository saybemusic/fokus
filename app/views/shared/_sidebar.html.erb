<div class="sidebar" data-sidebar-target="sidebar">

  <div class="sidebar-header">

    <div class="profil">
      <svg width="48" height="48" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
        <circle cx="24" cy="24" r="20" fill="none" stroke="#415D43" stroke-width="3" />
        <text x="50%" y="50%" font-family="Lato, sans-serif" font-size="32" fill="#415D43" text-anchor="middle" dominant-baseline="central">F</text>
      </svg>

      <% if user_signed_in? %>
        <%= current_user.first_name %> <%= current_user.last_name %>
